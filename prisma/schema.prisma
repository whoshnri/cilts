generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite" // postgresql / sqlite
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(cuid())
  username    String     @unique
  email       String?    @unique
  image       String?
  collabs     Collab[]   @relation("UserCollabs")
  bookmarks   Collab[]   @relation("UserBookmarks")
  comments    Comment[]
  createdAt   DateTime   @default(now())
}

model Collab {
  id            String      @id @default(cuid())
  slug          String      @unique
  title         String
  subtitle      String?
  description   String?
  imageUrl      String?
  link          String?
  tags          CollabTag[]
  upvotes       Int           @default(0)
  views         Int           @default(0)
  comments      Comment[]
  authorId      String?
  author        User?         @relation("UserCollabs", fields: [authorId], references: [id])
  bookmarkedBy  User[]        @relation("UserBookmarks")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model CollabTag {
  id        String @id @default(cuid())
  name      Tag
  collabId  String
  collab    Collab @relation(fields: [collabId], references: [id])
}

model Comment {
  id          String    @id @default(cuid())
  content     String
  collabId    String
  collab      Collab    @relation(fields: [collabId], references: [id])
  authorId    String?
  author      User?     @relation(fields: [authorId], references: [id])
  createdAt   DateTime  @default(now())
}

enum Tag {
  DESIGN
  DEVELOPMENT
  AI
  EDUCATION
  PRODUCT
  ART
  RESEARCH
  MUSIC
  WRITING
  BUSINESS
}
